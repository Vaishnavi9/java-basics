	public static void printList(List<Theatre.Seat> Seat) {
		
		for(Theatre.Seat seat: Seat) {
			
			System.out.print(" "+seat.getSeatNumber());
			
		}
		
		System.out.println();
		System.out.println("=======================================================================");
		
		
	}
	
	
	
	

}
